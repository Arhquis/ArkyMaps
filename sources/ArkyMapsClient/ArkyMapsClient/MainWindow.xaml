<Window x:Class="ArkyMapsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ArkyMapsClient.Views"
        Title="Arky maps" Height="720" Width="1280" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <TabControl x:Name="m_tabControl">
        <TabItem Header="Login">
            <Grid>
                <views:LoginView HorizontalAlignment="Center" VerticalAlignment="Center"
                                 Width="300"
                                 x:Name="m_loginView"/>
            </Grid>
        </TabItem>
        <TabItem Header="Map"
                 x:Name="m_realTimeViewTabItem"
                 IsEnabled="False">
            <Grid>
                <views:RealTimeView
                    x:Name="m_realTimeView"/>
            </Grid>
        </TabItem>
        <TabItem Header="Administration"
                 x:Name="m_administrationViewTabItem"
                 IsEnabled="False">
        </TabItem>
    </TabControl>
</Window>
